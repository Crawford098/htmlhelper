@model HTMLHELP.Models.Formulario
@{

    ViewBag.Title = "Formlario";
}
<h2>@ViewBag.Title.</h2>



<div >
    @using (@Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Cedula, htmlAttributes: new { @class = "control-label col-md-1" })
            @Html.EditorFor(m => m.Cedula, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Cedula, "", new { @class = "text-danger"})
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Nombre, htmlAttributes: new { @class = "control-label col-md-1"})
            @Html.EditorFor(m => m.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger"})
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Apellido, htmlAttributes: new { @class = "control-label col-md-1"})
            @Html.EditorFor(m => m.Apellido, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Apellido, "", htmlAttributes: new { @class = "text-danger"})
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Edad, htmlAttributes: new { @class = "control-label col-md-1" })
            @Html.EditorFor(m => m.Edad, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Edad)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Telefono, htmlAttributes: new { @class = "control-label col-md-1" })
            @Html.EditorFor(m => m.Telefono, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Telefono)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Correo, htmlAttributes: new { @class = "control-label col-md-1" })
            @Html.EditorFor(m => m.Correo, new { htmlAttributes = new { @class = "form-control" } })
