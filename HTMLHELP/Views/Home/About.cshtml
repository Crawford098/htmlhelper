        </div>


        //DROPDOWNLIST
        var listado = new List<SelectListItem>
                () {
        new SelectListItem(){ Text = "Hombre",Value = "Hombre"},
        new SelectListItem(){ Text = "Mujer", Value = "Mujer"} };
        <br/>
        <div class="dropdown">
            @Html.LabelFor(m => m.Genero, htmlAttributes: new { @class = "control-label col-md-1" })
            <br/>

            @Html.EnumDropDownListFor(m=> m.Genero,"seleccione su Genero", new { htmlAttributes = new { @class = "btn btn-secundary dropdown-toggle" } })
        </div>
        <br />
        //RADIO BUTTON
        <div>
            @Html.LabelFor(m => m.EstadoCivil)
            <br />
            @Html.Label("Casado")
            @Html.RadioButtonFor(m => m.EstadoCivil, "Casado")
            <br />
            @Html.Label("Soltero")
            @Html.RadioButtonFor(m => m.EstadoCivil, "Soltero")
            <br />
            @Html.Label("Viudo/a")
            @Html.RadioButtonFor(m => m.EstadoCivil, "Viudo/a")
            <br />
            @Html.Label("Union Libre")
            @Html.RadioButtonFor(m => m.EstadoCivil, "Union Libre")
            <br />
            
            @*//CHECKBOX*@

        </div>
        <br />
        <div>
            @Html.Label("hobbies")
            <br />
            @Html.LabelForModel("Basketball")
