            <br />
            @Html.LabelForModel("Videos juegos")
            @Html.CheckBoxFor(m => m.Hobbys2)
            <br />
            @Html.LabelForModel("Ver series")
            @Html.CheckBoxFor(m => m.Hobbys3)
            <br />
            @Html.LabelForModel("Gym")
            @Html.CheckBoxFor(m => m.Hobbys4)

        </div>

        <input type="submit" class="btn btn-default" name="submit" value="ENVIAR" />


}
</div>
